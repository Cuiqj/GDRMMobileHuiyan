<?xml version="1.0" encoding="UTF-8"?>
<pdf:template>
	{{! 路政案件现场勘验图 }}
	<pdf:paper width="841.89" height="640.276" fontName="SimSun" fontSize="10.5" offset="-4,11"/>
	<pdf:content>
		<pdf:text point="110,-3" fontSize="17.5">广东省高速公路路政管理</pdf:text>
		<pdf:text point="78,4" fontSize="22.5">路 产 索 赔 案 件 现 场 勘 查 图</pdf:text>
		<pdf:table rect="{5,30},{288,177}" borderWidth="0.5" lineWidth="0.5" padding="1">
			<pdf:tr height="11">

				<pdf:td width="20">发  案\n时  间</pdf:td>
				<pdf:td width="86">
					<pdf:text point="mid-left:20,6" static="NO">{{ date.year }}</pdf:text>
					<pdf:text point="mid-left:29,6">年</pdf:text>
					<pdf:text point="mid-left:38,6" static="NO">{{ date.month }}</pdf:text>
					<pdf:text point="mid-left:42,6">月</pdf:text>
					<pdf:text point="mid-left:50,6" static="NO">{{ date.day }}</pdf:text>
					<pdf:text point="mid-left:55,6">日</pdf:text>
					<pdf:text point="mid-left:60,6" static="NO">{{ date.hour }}</pdf:text>
					<pdf:text point="mid-left:68,6">时</pdf:text>
					<pdf:text point="mid-left:75,6" static="NO">{{ date.minute }}</pdf:text>
					<pdf:text point="mid-left:81,6">分</pdf:text>
				</pdf:td>
				<pdf:td width="20">地  点</pdf:td>
				<pdf:td width="89" textAlignment="left">
					
					
					<pdf:text point="mid-left:40,6">路段K</pdf:text>
					
					<pdf:text point="mid-left:60,6">+</pdf:text>
					
					<pdf:text point="mid-left:75,6">M(左右)</pdf:text>
				
					
					<pdf:text point="mid-left:2,6" static="NO">{{ roadName }}</pdf:text>
					
					<pdf:text point="mid-left:53,6" static="NO">{{ station_start_km }}</pdf:text>
					
					<pdf:text point="mid-left:65,6" static="NO">{{ station_start_m }}</pdf:text>
					
				</pdf:td>

				<pdf:td width="18">天  气</pdf:td>
				<pdf:td width="19" static="NO" textAlignment="left">
					<pdf:text point="mid-left:3,5" static="NO">{{ weater }}</pdf:text>
				</pdf:td>

				<pdf:td width="18">路  面\n性  质</pdf:td>
				<pdf:td width="18" static="NO" fontSize="9" textAlignment="left">
					<pdf:text point="mid-left:2,6" static="NO">{{ eventReason }}</pdf:text>
				</pdf:td>


			</pdf:tr>
			<pdf:tr height="129.5">
				<pdf:td width="288">
					<pdf:image rect="{0,0},{288,129.5}" url="{{ imagePath }}" static="NO"/>
					<pdf:grid rect="{0,0},{288,129.5}" row="26" column="62" alpha="0.3" />
				</pdf:td>
			</pdf:tr>
			<pdf:tr height="30.5">
				<pdf:td width="288">
					<pdf:text point="2,1.5" fontSize="12">说明：</pdf:text>
					<pdf:paragraph fontSize="12" rect="{1,-1},{280,30.5}" lineHeight="7" indent="head:15" static="NO">{{ comment }}</pdf:paragraph>
				</pdf:td>
			</pdf:tr>
			<pdf:tr height="6">
				<pdf:td width="288">
					<pdf:text point="mid-left:5,3">路政绘图员</pdf:text>
					<pdf:text point="mid-left:146,3">绘图时间</pdf:text>
					<pdf:text point="mid-left:220,3" static="NO">{{ date2.year }}</pdf:text>
					<pdf:text point="mid-left:231,3">年</pdf:text>
					<pdf:text point="mid-left:238,3" static="NO">{{ date2.month }}</pdf:text>
					<pdf:text point="mid-left:244,3">月</pdf:text>
					<pdf:text point="mid-left:251,3" static="NO">{{ date2.day }}</pdf:text>
					<pdf:text point="mid-left:257,3">日</pdf:text>
					<pdf:text point="mid-left:263,3" static="NO">{{ date2.hour }}</pdf:text>
					<pdf:text point="mid-left:270,3">时</pdf:text>
					<pdf:text point="mid-left:276,3" static="NO">{{ date2.minute }}</pdf:text>
					<pdf:text point="mid-left:283,3">分</pdf:text>
				</pdf:td>
			</pdf:tr>
		</pdf:table>
		<pdf:text point="20,209">路政勘查员</pdf:text>
        
        <pdf:text point="190,209">当事人或见证人签字</pdf:text>
	</pdf:content>
</pdf:template>